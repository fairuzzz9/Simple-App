<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/catback">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/ninja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_marginTop="20dp"
        android:background="@drawable/bckbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:text="Name: Muhammad Fairuz Bin Abdul Samad"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/age"
        android:background="@drawable/bckbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Age: 23"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/address"
        android:background="@drawable/bckbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:text="Address: Kajang, Selangor"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/job"
        android:background="@drawable/bckbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:text="Job: Software Engineering"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/company"
        android:background="@drawable/bckbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/job"
        android:text="Company: Pos Malaysia"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Info"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/DarkBlue"
        android:padding="10dp"/>

</RelativeLayout>